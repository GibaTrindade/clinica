<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Clinica" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Clinica" %>">
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
	  <%= render 'layouts/header' %>
	  
	   <div class="container">
		   <% if notice.present? %>
		   <p id="notice" class="alert alert-success"><%= notice %> </p> <% end %>
		   <% if alert.present? %>
		   <p id="alert" class="alert alert-danger"><%= alert %> </p> <% end %>
       <%= yield %>
	     <%= render 'layouts/footer'%>
   </div>
 
   <script type="text/javascript">
          <%= yield :js %>
        </script>
  </body>
</html>
