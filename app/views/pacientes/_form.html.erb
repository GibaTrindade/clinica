<%= form_for(@paciente) do |f| %>
  <% if @paciente.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h3><%= pluralize(@paciente.errors.count, "erro") %> </h3>

      <ul>
      <% @paciente.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
	<div class="col-md-4">
		<div class="form-group">
    <%= f.label :nome %>
    <%= f.text_field :nome, class: "form-control" %>
</div>
<div class="form-group">
    <%= f.label :cpf %>
    <%= f.text_field :cpf, class: "form-control" %>
</div>
<div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>
</div>
<div class="form-group">
    <%= f.label :idade %>
    <%= f.number_field :idade, class: "form-control" %>
</div>
<div class="form-group">  
    <%= f.label :sexo %>
	<%= f.select :sexo, @sexo, {}, { class: "form-control" } %>
  
	
</div>
  </div>

<div class="col-md-4">
	<div class="form-group">  
    <%= f.label :telf %>
    <%= f.text_field :telf, class: "form-control" %>
</div>
  
  <div class="form-group">  
    <%= f.label :telc %>
    <%= f.text_field :telc, class: "form-control" %>
</div>
<div class="form-group">  
    <%= f.label :convenio %>
    <%= f.text_field :convenio, class: "form-control" %>
</div>
<div class="form-group">  
    <%= f.label "Estado do paciente" %>
	<% if @action == "new"%>
    	<%= f.check_box :ativo_desativado, checked: "checked", disabled: "disabled", class: "form-control"  %>
		<%= f.hidden_field :ativo, value: 1 %>
	<% else %>
		<%= f.check_box :ativo, class: "form-control"  %>
	<%end%>
</div>
<div class="form-group">  
    <%= f.label :estadocivil %>
	<%= f.select :estadocivil, @estadocivil, {}, { class: "form-control" } %>

</div>
<div class="form-group"> 
	<%= f.label "Profissional responsÃ¡vel" %>
	<%= f.select :user_id, @all_users, {}, { class: "form-control" } %>
  
</div>
 </div>

</div>
<div class="form-group"> 
	<% if @action == "new" %>
    	<%= f.submit t('buttons.criar.paciente') , :class => 'btn btn-primary' %>
	<%else%>
		<%= f.submit t('buttons.editar.paciente') , :class => 'btn btn-primary' %>
	<%end%>
</div>
<% end %>
