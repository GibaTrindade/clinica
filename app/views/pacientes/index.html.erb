<h1>Lista de pacientes</h1>
<div id="pacientes">
<%= form_tag pacientes_path, :method => 'get', :id => "pacientes_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Buscar", :nome => nil %>
  </p>
<% end %>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Email</th>
      <th>Celular</th>
      <th>Convenio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr id="paciente_<%= paciente.id%>">
        <td><%= link_to "#{paciente.nome}", paciente %></td>
        <td><%= paciente.cpf %></td>
        <td><%= paciente.email %></td>
        <td><%= paciente.telc %></td>
        <td><%= paciente.convenio %></td>
        <td><%= link_to 'Edit', edit_paciente_path(paciente) %></td>
        <td><%= link_to 'Destroy', paciente, method: :delete, remote: true, id: "remove_paciente_#{paciente.id}", data: { confirm: 'Tem certeza?' } %></td>
      </tr>
	  <% content_for :js do%>
	    $('#remove_paciente_<%= paciente.id %>').bind('ajax:success', function(){
	      $('#paciente_<%= paciente.id %>').remove();
	    });
	  <%end%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Paciente', new_paciente_path %>
