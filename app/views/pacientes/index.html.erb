<h1>Lista de pacientes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Email</th>
      <th>Idade</th>
      <th>Sexo</th>
      <th>Telf</th>
      <th>Telc</th>
      <th>Convenio</th>
      <th>Ativo</th>
      <th>Estadocivil</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.nome %></td>
        <td><%= paciente.cpf %></td>
        <td><%= paciente.email %></td>
        <td><%= paciente.idade %></td>
        <td><%= paciente.sexo %></td>
        <td><%= paciente.telf %></td>
        <td><%= paciente.telc %></td>
        <td><%= paciente.convenio %></td>
        <td><%= paciente.ativo %></td>
        <td><%= paciente.estadocivil %></td>
        <td><%= link_to 'Show', paciente %></td>
        <td><%= link_to 'Edit', edit_paciente_path(paciente) %></td>
        <td><%= link_to 'Destroy', paciente, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

