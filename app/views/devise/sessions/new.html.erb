


<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {role: "form", class: "form-signin"}) do |f| %>
 <h2 class="form-signin-heading">Entrar</h2>

  	
  	  <%= f.email_field :username, :autofocus => true, class: "form-control", id: "username_text", placeholder: "Username" %>
	
  
  	
  		<%= f.password_field :password, class: "form-control", id: "password_text", placeholder: "Senha" %>
	

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
	
</br>
  	  <%= f.submit "Entrar!", :class => "btn btn-lg btn-primary btn-block" %>
	  
<% end %>

<%= render "devise/shared/links" %>